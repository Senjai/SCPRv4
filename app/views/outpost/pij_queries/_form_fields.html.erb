<%= form_block "Details" do %>
  <%= f.input :pin_query_id, label: "PIN Query ID", hint: "The UUID of the PIN Query. Example: 01aa97973688" %>

  <%= f.input :query_type, collection: PijQuery::QUERY_TYPES %>
  <%= f.input :is_featured %>
<% end %>

<%= f.section "full_details" %>

<%= form_block "Short Details" do %>
  <%= f.input :teaser, as: :text, input_html: { class: "tiny" } %>
  <%= f.section "slug" %>
<% end %>

<%= form_block "Publishing" do %>
  <%= render '/outpost/shared/help_blocks/publishing' %>
  <%= f.input :status, collection: PijQuery.status_collection, selected: record.status || PijQuery::STATUS_HIDDEN, include_blank: false, input_html: { id: "status-select" } %>

  <%= f.section 'content_alarm' %>
  <%= f.section 'auto_published_at' %>

  <div id="scheduled_status" class="notification block"></div>
<% end %>

<%= f.section "assets" %>

<%= f.section "related_links" %>
<%= f.section "related_content" %>
