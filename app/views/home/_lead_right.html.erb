<div class="homepage-lead lead-right">
  <div class="row-fluid">
    <%= content_cache("homepage-lead-stories") do %>
      <% register_content(@homepage) %>
      <div class="span12">
        <div class="offleads">
          <%= render_content @homepage.content[0..2], "offlead" %>
        </div>
      </div>
      <div class="span12">
        <%= render_content @homepage.content[3], "lead" %>
      </div>
    <% end %>
  </div>
</div> <!-- lead-right -->

<% content_for :conversation_slot do %>
  <% if @featured_comment %>
    <div class="join-conversation-container home">
      <%= render '/shared/featured_comment/home', comment: @featured_comment %>
    </div>
  <% end %>
<% end %>
