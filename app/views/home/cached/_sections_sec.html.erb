<div class="more-news">
  <h6 class="more-news-title">
    <%= link_to section[:section].title, section[:section].public_path %>
    <span class="more-link"><%= link_to "More", section[:section].public_path %></span>
  </h6>
  
  <div class="row-fluid">
    <div class="span14">
      <div class="more-news-content">
        <%= render_content section[:content][0], "sec_lead", locals: { options: { show_byline: true } } %>
    
        <ul class="additional-stories cbase">
          <%= render_content section[:content][1..3], "headline" %>
        </ul>
      </div> <!-- more news content -->
    </div> <!-- span14 -->
    <div class="span10">
      <div class="related-content">
        <% if section[:right] && section[:right].is_a?(FeaturedComment) %>
          <%= render '/shared/featured_comment/sec_right', comment: section[:right] %>
        <% else %>
          <%= render_content section[:right], "sec_right" %>
        <% end %>
      </div> <!-- related content -->
    </div><!-- span10 -->
  </div> <!-- row fluid -->
</div><!-- more news -->
