<% content_for :conversation_slot do %>
<% end %>

<% content_for :hero_roadblock do %>
<style>
	.broadcast-bar {display:none;}
</style>

<% winner = '<em class="winner">Winner</em>'.html_safe %>

<div class="hero-election">
	<div class="container-fluid">
		<div class="row-fluid">
			<header class="span24 election-header">
				<h1>2012 Election Results</h1>
				<a class="share-link social-fb" data-url="<%= URI.escape(election_url) %>"><span class="social_fb" data-url="<%= URI.escape(election_url) %>">Share This</span></a>
			</header>
		</div>
		<div class="row-fluid">
			<section class="span24">
				<div class="header-well clearfix">
					<a href="http://twitter.com/KPCC" class="live-tweet visible-mobile">Read KPCC’s Election Live-Tweets</a>
					<div class="tweets">
						<span class="live-tweet">@KPCC Live-Tweets:</span>
						<%= Rails.cache.fetch("twitter:KPCC") %>
						<% content_for :footerjss do %>
							tweetRotator = new scpr.TweetRotator({el: "#election-tweets"});
						<% end %>
					</div>
				</div>
			</section>
		</div>
		<div class="row-fluid results">
				<!-- PRESIDENTIAL RESULTS -->
				<article class="span8 results-block relative">
					<header class="first">
						<h2>U.S. President</h2>
						<aside><%= data_points['president:percent_reporting'] %>% Reporting</aside>
					</header>
					<section class="candidate obama first">
						<h4>Barack Obama (D) <%= winner if data_points['president:winner'].to_s.downcase.match(/obama/) %></h4>
						<div class="result relative">
							<strong><%= data_points['president:obama_electoral_votes'] %></strong>
							<span>Electoral Votes</span>
						</div>
					</section>
					<section class="candidate romney last">
						<h4>Mitt Romney (R) <%= winner if data_points['president:winner'].to_s.downcase.match(/romney/) %></h4>
						<div class="result relative">
							<strong><%= data_points['president:romney_electoral_votes'] %></strong>
							<span>Electoral Votes</span>
						</div>
					</section>
					<header class="first">
						<h2>30th District</h2>
						<aside><%= data_points['30th:percent_reporting'] %>% Reporting</aside>
					</header>
					<section class="candidate berman first">
						<h4>Howard Berman <%= winner if data_points['30th:winner'].to_s.downcase.match(/berman/) %></h4>
						<div class="result relative">
							<strong><%= data_points['30th:berman_percent'] %><b class="percentage">%</b></strong>
						</div>
					</section>
					<section class="candidate sherman last">
						<h4>Brad Sherman <%= winner if data_points['30th:winner'].to_s.downcase.match(/sherman/) %></h4>
						<div class="result relative">
							<strong><%= data_points['30th:sherman_percent'] %><b class="percentage">%</b></strong>
						</div>
					</section>
					<div class="vert-divider"></div>
				</article>
				<!-- PROPOSITION RESULTS -->
				<article class="span8 results-block relative">
					<header>
						<h2>CA Propositions</h2>
						<aside><%= data_points['props:percent_reporting'] %>% Reporting</aside>
					</header>
					<!-- Prop 30 -->
					<section class="initiative first">
						<div class="title">
							<h3>Prop 30</h3>
							<p>Governor’s Tax Initiative</p>
						</div>
						<div class="result relative">
							<div class="yes <%= "pass" if data_points['props:30:passed'].to_s.downcase.match /true/ %>">
								<strong><%= data_points['props:30:percent_yes'] %><b class="percentage">%</b></strong>
								<span>Yes</span>
							</div>
							<div class="no <%= "fail" if data_points['props:30:passed'].to_s.downcase.match /false/ %>">
								<strong><%= data_points['props:30:percent_no'] %><b class="percentage">%</b></strong>
								<span>No</span>
							</div>
							<div class="vert-divider"></div>
						</div>
					</section>
					<!-- Prop 34 -->
					<section class="initiative">
						<div class="title">
							<h3>Prop 34</h3>
							<p>Repeal Death Penalty</p>
						</div>
						<div class="result relative">
							<div class="yes <%= "pass" if data_points['props:34:passed'].to_s.downcase.match /true/ %>">
								<strong><%= data_points['props:34:percent_yes'] %><b class="percentage">%</b></strong>
								<span>Yes</span>
							</div>
							<div class="no <%= "fail" if data_points['props:34:passed'].to_s.downcase.match /false/ %>">
								<strong><%= data_points['props:34:percent_no'] %><b class="percentage">%</b></strong>
								<span>No</span>
							</div>
							<div class="vert-divider"></div>
						</div>
					</section>
					<!-- Prop 36 -->
					<section class="initiative">
						<div class="title">
							<h3>Prop 36</h3>
							<p>Repeal "Three Strikes"</p>
						</div>
						<div class="result relative">
							<div class="yes <%= "pass" if data_points['props:36:passed'].to_s.downcase.match /true/ %>">
								<strong><%= data_points['props:36:percent_yes'] %><b class="percentage">%</b></strong>
								<span>Yes</span>
							</div>
							<div class="no <%= "fail" if data_points['props:36:passed'].to_s.downcase.match /false/ %>">
								<strong><%= data_points['props:36:percent_no'] %><b class="percentage">%</b></strong>
								<span>No</span>
							</div>
							<div class="vert-divider"></div>
						</div>
					</section>
					<!-- Prop 38 -->
					<section class="initiative last">
						<div class="title">
							<h3>Prop 38</h3>
							<p>Education Tax Initiative</p>
						</div>
						<div class="result relative">
							<div class="yes <%= "pass" if data_points['props:38:passed'].to_s.downcase.match /true/ %>">
								<strong><%= data_points['props:38:percent_yes'] %><b class="percentage">%</b></strong>
								<span>Yes</span>
							</div>
							<div class="no <%= "fail" if data_points['props:38:passed'].to_s.downcase.match /false/ %>">
								<strong><%= data_points['props:38:percent_no'] %><b class="percentage">%</b></strong>
								<span>No</span>
							</div>
							<div class="vert-divider"></div>
						</div>
					</section>
					<div class="vert-divider"></div>
				</article>
				<!-- LA COUNTY DA RESULTS -->
				<article class="span8 results-block">
					<header class="last">
						<h2>LA County DA</h2>
						<aside><%= data_points['da:percent_reporting'] %>% Reporting</aside>
					</header>
					<section class="candidate lacey first">
						<h4>Jackie Lacey <%= winner if data_points['da:winner'].to_s.downcase.match(/lacey/) %></h4>
						<div class="result relative">
							<strong><%= data_points['da:lacey_percent'] %><b class="percentage">%</b></strong>
						</div>
					</section>
					<section class="candidate jackson last">
						<h4>Alan Jackson <%= winner if data_points['da:winner'].to_s.downcase.match(/jackson/) %></h4>
						<div class="result relative">
							<strong><%= data_points['da:jackson_percent'] %><b class="percentage">%</b></strong>
						</div>
					</section>
					<header class="last">
						<h2>Local Measures</h2>
						<aside><%= data_points['measures:percent_reporting'] %>% Reporting</aside>
					</header>
					<!-- MEASURE J -->
					<section class="initiative local first">
						<div class="title">
							<h3>Measure J</h3>
							<p>Transportation Tax</p>
						</div>
						<div class="result relative">
							<div class="yes <%= "pass" if data_points['measures:J:passed'].to_s.downcase.match /true/ %>">
								<strong><%= data_points['measures:J:percent_yes'] %><b class="percentage">%</b></strong>
								<span>Yes</span>
							</div>
							<div class="no <%= "fail" if data_points['measures:J:passed'].to_s.downcase.match /false/ %>">
								<strong><%= data_points['measures:J:percent_no'] %><b class="percentage">%</b></strong>
								<span>No</span>
							</div>
							<div class="vert-divider"></div>
						</div>
					</section>
					<section class="initiative last"></section>
				</article>
			</div>
	</div>
</div>



<% end %>
