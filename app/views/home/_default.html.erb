<div class="homepage-lead default">
  <div class="row-fluid">
    <%= content_cache(@homepage) do %>
      <% register_content(@homepage) %>
      <div class="span15">
        <%= render_content @homepage.content[0], "lead5" if @homepage %>
      </div>
      <div class="span9">
        <div class="offleads">
          <%= render_content @homepage.content[1..-1], "offlead" if @homepage %>
        </div>
      </div>
    <% end %> 
  </div>
</div> <!-- homepage default -->

<% content_for :conversation_slot do %>
  <% if @featured_comment %>
    <div class="join-conversation-container home">
      <%= render '/shared/featured_comment/home', comment: @featured_comment %>
    </div>
  <% end %>
<% end %>
