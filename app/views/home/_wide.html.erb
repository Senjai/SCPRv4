<div class="row-fluid">
  <%= content_cache('homepage-lead-stories') do %>
    <% register_content(@homepage) %>
    <div class="span24">
      <%= render_content @homepage.content[0], "lead8" if @homepage %>
    </div>
</div>
<div class="row-fluid">
    <div class="span24 offleads split">
      <div class="row-fluid">
        <%= render_content @homepage.content[1..-1], "offlead_split" if @homepage %>
      </div>
    </div>
  <% end %>
</div>

<% content_for :conversation_slot do %>
  <% if @featured_comment %>
    <div class="join-conversation-container home">
      <hr />
      <%= render '/shared/featured_comment/home', comment: @featured_comment %>
    </div>
  <% end %>
<% end %>
