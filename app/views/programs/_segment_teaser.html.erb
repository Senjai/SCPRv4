<div class="teaser cbase">
  <div class="row-fluid">
    <% if segment.assets.present? %>
      <div class="span6">
        <%= render_asset segment, 'lsquare' %>
      </div>
      <div class="span12">
    <% else %>
      <div class="span18">
    <% end %>
      <div class="info">
        <h3><%= link_to segment.headline, segment.link_path %></h3>
        <p class="byline"><time pubdate=""><%= format_date segment.published_at, format: :full_date, time: true %></time> <span class="pipe">|</span> <%= render_byline segment %></p>
        <%= segment.teaser.html_safe %>
      </div>
    </div> <!-- span12/9 -->
    <div class="span6">
      <div class="interact">
        <%= link_to_audio("Listen now", segment, class: "inline") if segment.audio.available.present? %>
        <%= comment_count_for segment, class: "inline" %>
      </div>
    </div>
  </div>
</div>
