<!-- Segment Teaser (KPCC or External) -->

<div class="teaser cbase">
  <div class="row-fluid">
    <% if article.assets.present? %>
      <div class="span6">
        <%= render_asset article, 'thumbnail' %>
      </div>
      <div class="span12">
    <% else %>
      <div class="span18">
    <% end %>
      <div class="info">
        <h3><%= link_to article.short_title, article.public_url  %></h3>
        <span class="byline">
          <%= timestamp(article.public_datetime) %> <span class="pipe">|</span> <%= render_byline article %>
        </span>
      </div>

      <%= article.teaser.html_safe %>
    </div> <!-- span12/9 -->
    <div class="span6">
      <div class="interact">
        <%= content_widget "primary_audio", article %>
        <%= comment_count_for article.original_object, class: "inline" %>
      </div>
    </div>
  </div>
</div>
