<!-- KPCC Episode teaser -->

<div class="show-episode episode">
  <div class="row-fluid">
  <% if episode.assets.present? %>
    <div class="span6">
      <%= render_asset episode, 'thumbnail' %>
    </div>
  
    <div class="span18">
  <% else %>
    <div class="span24">
  <% end %>
      <h3><%= link_to episode.headline, episode.public_path %></h3>
      <p><%= episode.body.html_safe %></p>
    </div>
  </div>
</div>
