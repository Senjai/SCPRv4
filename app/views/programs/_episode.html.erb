<div class="show-episode">
	<div class="row">
	<% if episode.assets.present? %>
		<div class="span2">
			<%= render_asset episode, 'lsquare' %>
		</div>
	
		<div class="span6">
	<% else %>
		<div class="span8">
	<% end %>
			<h3><%= link_to episode.title, episode.link_path %></h3>
			<p><%= episode.teaser %></p>
		</div>
	</div>
</div>