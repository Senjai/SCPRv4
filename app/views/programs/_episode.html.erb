<div class="show-episode">
	<div class="row">
	<% if episode.assets.any? %>
		<div class="span2">
			<%= episode.assets.first.asset.tag(:lsquare) %>
		</div>
	
		<div class="span6">
	<% else %>
		<div class="span8">
	<% end %>
			<h3><%= link_to episode.title, episode.link_path %></h3>
			<%= episode.teaser %>
		</div>
	</div>
</div>