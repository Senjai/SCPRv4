<!-- External Program -->

<% present @program, ProgramPresenter do |p| %>

<div class="program-external-header">
  <div class="row-fluid" id="program-external-header">
    <div class="span18">
      <h1><%= p.title %></h1>
      <p><%= p.description %></p>
    </div>
    <div class="span6">
      <nav class="connect">
        <%= p.web_link %>
        <%= p.rss_link %>
        <%= p.podcast_link %>
      </nav>
    </div>
  </div> <!-- row fluid -->
</div> <!-- .program-ext-header -->

<h6>Recent Episodes</h6>

<%= cache ["episode-teasers", @episodes] do %>
<div class="show-segments">
  <%= render partial: "external_episode", collection: @episodes %>
</div>
<% end %>

<%= paginate @episodes %>

<% end %>
