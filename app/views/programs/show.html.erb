<% if @program.display_episodes %>
  <section class="show-feature">
    <%= render partial: "/programs/current_episode", object: @program.episodes.published.first if @program.episodes.published.present? %>

    <% if upcoming = @program.episodes.upcoming.first %>
      <div class="upcoming-episode">
        <h3><b>Coming Up:</b> <%= upcoming.headline %></h3>
        <p><%= upcoming.body %></p>
      </div>
    <% end %>
  </section>
  
  <%= render "/programs/archive_select" %>
  <% if flash[:alert] %>
    <h4 style="color:#f00;"><%= flash[:alert] %></h4>
  <% end %>
<% end %>

<% if @program.display_segments %>
  <% nav = paginate @segments, params: { anchor: "archive"} %>
  <section class="show-segments">
    <%= any_to_list? @segments, title: "Segments" do %>
      <h2>Recently on <%= @program.title %></h2>
      <%= nav if @segments.current_page > 1 %>
      <%= render partial: "/programs/segment_teaser", collection: @segments, as: :segment %>
      <%= nav %>
    <% end %>
  </section>
  
<% elsif @program.display_episodes %>
  <% nav = paginate @episodes, params: { anchor: "archive"} %>
  <section class="show-episodes">
    <%= any_to_list? @episodes, title: "Episodes" do %>
      <h2>Recently on <%= @program.title %></h2>
      <%= nav if @episodes.current_page > 1 %>
      <%= render partial: "/programs/episode", collection: @episodes %>
      <%= nav %>
    <% end %>
  </section>  
<% end %>
