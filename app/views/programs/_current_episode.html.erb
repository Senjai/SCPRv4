<%= content_cache("episode:#{current_episode.id}:current") do %>
<div class="current-episode">
	<h2><%= link_to current_episode.title, current_episode.link_path %></h2>
	<div class="row">
		<div class="span4">			
			<%= render_content current_episode.segments.published, "headlines"%>
		</div>
		<div class="span4">
			<%= render_asset current_episode, "lead"%>
		</div>
	</div>
</div>
<% end %>