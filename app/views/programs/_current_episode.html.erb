<%= content_cache("episode:#{current_episode.id}:current") do %>
<% register_content current_episode %>
<div class="current-episode row">
	<div class="span4">
		<h2><%= link_to current_episode.title, current_episode.link_path %></h2>
		
		<%= simple_format current_episode.teaser %>	
	</div>
	<div class="span4">
			<%= render_asset current_episode, "lead"%>
	</div>
</div>
<div class="current-episode-segments row">
	<% split_num = ( current_episode.segments.published.length.to_f / 2 ).ceil %>
	<div class="span4">
		<%= render_content current_episode.segments.published.first(split_num), "seg_headline" %>
	</div>
	<div class="span4">
		<%= render_content current_episode.segments.published[split_num..-1], "seg_headline" %>		
	</div>
</div>
<% end %>