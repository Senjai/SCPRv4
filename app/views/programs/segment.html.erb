<% page_title [@segment.headline, @program.title] %>
<%= render_content @segment, "opengraph" %>

<div class="row">
	<section class="segment-meta span2">
		<time pubdate><%= smart_date @segment %></time>
		<p class="byline">By <%= render_byline @segment %></p>
		<%= render "shared/cwidgets/social_tools", :cssClass => 'side', :content => @segment %>
		<%= render "shared/cwidgets/comment_count", :cssClass => 'left-side right-align', :content => @segment %>
		<%= render "shared/cwidgets/audio", :content => @segment %>
	</section>

	<section class="segment span6">
		<h5 class="episode-title">
			<% if @segment.episodes.present? %>
				<%= link_to @segment.episodes.first.title, @segment.episodes.first.link_path %>
			<% else %>
				<%= link_to @program.title, program_path(@program) %>
			<% end %>
		</h6>
	
		<article class="segment">
			<h1><%= @segment.headline %></h1>
			<%= render_asset @segment, "segment" %>
			<div class="story-body">
				<%= simple_format @segment.body %>
				
				<br style="clear: both"/>
				<%= render "shared/cwidgets/social_tools", :cssClass => 'bottom', :content => @segment %>
			</div>
		</article><!-- article.segment -->
	
		<%= render "shared/cwidgets/comments", :cssClass => '', :content => @segment %>
	</section> <!-- section.segment -->
</div>