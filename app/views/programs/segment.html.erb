<% page_title [@segment.headline, @program.title] %>
<%= render_content @segment, "opengraph" %>

<div class="row">
	<%= article_meta_for @segment %>

	<section class="segment span6">
		<h5 class="episode-title">
			<% if @segment.episode.present? %>
				<%= link_to @segment.episode.title, @segment.episode.link_path %>
			<% else %>
				<%= link_to @program.title, program_path(@program) %>
			<% end %>
		</h6>

		<article class="segment">
			<h1 class="story-headline"><%= @segment.headline %></h1>
			<p class="byline"><%= render_byline @segment %></p>
			
			<%= render_asset @segment, "segment" %>
			<div class="story-body">
				<%= simple_format @segment.body, {}, :sanitize => false %>
			
				<br style="clear: both"/>
			</div>
		</article><!-- article.segment -->
		
		<%= related_for @segment %>
		<%= social_tools_for @segment, cssClass: "bottom" %>
	</section> <!-- section.segment -->
</div>

<section class="fold">
	<div class="row other-segments">
		<div class="span2">
			<h6>More from this <%= @segment.episodes.present? ? "Episode" : "Program" %>
		</div>
		<div class="span6">
			<ul>
				<% @segment.sister_segments.each do |segment| %>
					<li><%= link_to segment.headline, segment.link_path %></li>
				<% end %>
			</ul>
		</div>
	</div>
		
	<div class="row">
		<div class="span2">
			<%= comment_widget_for @segment, cssClass: "left-side", name: "comments" %>
		</div>
		<div class="span6">
			<%= comments_for @segment, header: false %>
		</div>
	</div>
</section>