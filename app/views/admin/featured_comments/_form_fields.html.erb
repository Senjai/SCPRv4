<%= form_block "Association" do %>
  <%= f.association :bucket %>
  <%= f.input :content_type, collection: ContentBase::CONTENT_CLASSES.map { |c| [c.to_s.titleize, c] } %>
  <%= f.input :content_id, label: "Content ID", input_html: { class: 'thin' } %>
<% end %>

<%= form_block "Information" do %>
  <%= f.input :username %>
  <%= f.input :excerpt, input_html: { class: "tiny" } %>
<% end %>

<%= f.section "publishing" %>
