<%= form_block "Details" do %>
  <% if record.persisted? %>
    <%= f.input :user_name, input_html: { value: record.user.name, disabled: true } %>
  <% end %>
  
  <%= f.input :summary, hint: "A one-sentence summary of the issue", input_html: { class: "wide" } %>
  <%= f.input :link, hint: "The page where you are seeing the issue", input_html: { class: "wide" } %>
  <%= f.input :description, hint: "Describe the problem in detail. Include steps to reproduce, if applicable.", input_html: { class: "tiny" } %>
  <%= f.input :browser_info, hint: "Include NAME and VERSION (eg. Chrome 23.0) if it's not already filled in.", input_html: { class: "wide", value: record.new_record? ? request.env['HTTP_USER_AGENT'] : record.browser_info } %>  
  <%= f.input :status, collection: Ticket.status_text_collection, include_blank: false %>
<% end %>
