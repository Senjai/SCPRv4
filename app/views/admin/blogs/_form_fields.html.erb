<%= form_block "Basic Info" do %>
	<%= f.input :name %>
	<%= f.input :is_active %>
	<%= f.input :slug %>
	<%= f.input :teaser, label: "Tagline", input_html: { class: "long" } %>
	<%= f.input :description, input_html: { class: "short" } %>
<% end %>

<%= form_block "Media" do %>
	<%= f.input :feed_url %>
	<%= f.input :is_news %>
<% end %>

<%= form_block "Remote" do %>
	<%= f.input :is_remote %>
	<%= f.input :custom_url %>
<% end %>
