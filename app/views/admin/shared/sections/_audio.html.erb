<%= form_block "Audio" do %>
  <% if record.audio.empty? %>
    <% record.audio.build %>
  <% end %>
  
  <% record.audio.each_with_index do |audio, index| %>
    <%= f.render_fields "audio", record: audio, index: index %>
  <% end %>
  
  <%= f.link_to_add_fields(:audio, title: "Add More Audio") %>
<% end %>
