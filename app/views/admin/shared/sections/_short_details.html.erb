<%= form_block "Short Details" do %>
	<%= f.input :short_headline, input_html: { class: "wide" }, wrapper_html: { class: "field-counter", data: { target: 50, fuzziness: 10 } } %>
	<%= f.input :teaser, as: :text, input_html: { class: "tiny" }, wrapper_html: { class: "field-counter", data: { target: 145, fuzziness: 20} } %>
	<%= section "slug", f, record %>
	<%= extra %>
<% end %>
