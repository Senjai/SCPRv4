<%= form_block "Asset Management" do %>
  <%= extra %>
  
  <div id="asset_bucket" class="clearfix"></div>
  <%= f.input :asset_json, as: :hidden %>
  
  <script>
    $(document).ready(function() {
      new scpr.AssetManager(<%= raw record.assets.to_json %>, "#asset_bucket")
    });
  </script>
<% end %>
