<tr>
  <%= f.simple_fields_for :bylines, record do |nf| %>
    <%= render '/admin/resource/errors', f: nf %>
    <td><%= nf.association :user, label: false, input_html: { class: "span3" } %></td>
    <td><%= nf.input :name, label: false, input_html: { class: "span3" } %></td>
    <td><%= nf.input :role, label: false, input_html: { class: "span2" }, collection: ContentByline::ROLES, include_blank: false %></td>
    <td><%= nf.input :_destroy, as: :boolean, label: false, input_html: { class: "span1" } %></td>
  <% end %>
</tr>
