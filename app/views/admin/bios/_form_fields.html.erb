<%= form_block "Bio Information" do %>
  <%= f.input :name, hint: "The name that will show up around the website." %>
  <%= f.input :title, hint: "Example: KPCC's Education Reporter" %>
  <%= f.input :short_bio, hint: "A short blurb (1-2 sentences) for this author." %>
  <%= f.input :bio, input_html: { class: "short" } %>
  <%= f.input :asset_id, label: "Asset ID", input_html: { class: "tiny" } %>
<% end %>

<%= form_block "Website" do %>
  <%= f.association :user, label: "User Account" %>
  <%= f.input :slug, label: "URL Slug" %>
  <%= f.input :is_public, hint: "Check this to make the page available." %>
  <%= f.input :last_name, hint: "For ordering purposes only. Will be automatically filled in if left blank."%>
<% end %>

<%= form_block "Contact Information" do %>
  <%= f.input :email %>
  <%= f.input :twitter, hint: "Example: @kpcc" %>
  <%= f.input :phone_number %>
  <%= f.input :feed_url %>
<% end %>

<%= f.section "related_links" %>
