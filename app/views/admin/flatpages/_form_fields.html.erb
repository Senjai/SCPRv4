<%= form_block "Details" do %>
  <%= f.input :title %>
  <%= f.input :url %>
  <%= f.input :redirect_url %>
  <%= f.input :description, hint: "What is this flatpage for? For internal use only.", input_html: { class: "tiny" } %>
<% end %>

<%= form_block "Display Options" do %>
  <%= f.input :is_public %>
  <%= f.input :template, collection: Flatpage::TEMPLATE_OPTIONS, include_blank: false %>
<% end %>

<%= form_block "Content" do %>
  <%= f.input :content, input_html: { class: "ckeditor" } %>
  <%= f.input :extra_head, hint: "Extra JS/CSS to place in the HEAD tag of the page.", input_html: { class: "fixed-font short" } %>
  <%= f.input :extra_tail, hint: "Extra JS to place at the bottom of the page.", input_html: { class: "fixed-font short" } %>
<% end %>
