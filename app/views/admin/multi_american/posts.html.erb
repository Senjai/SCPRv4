<h2>Posts</h2>
<h4>Total count: <%= @doc.posts.size %></h4>
<table class="table table-striped">
	<thead>
		<tr>
			<th>WP-ID</th>
			<th>Post Type</th>
			<th>Title</th>
			<th>Slug</th>
			<th>Published</th>
			<th>Status</th>
		</tr>
	</thead>
	<tbody class="list">
			<% @posts.each do |post| %>
				<tr>
					<td><%= post.post_id %></td>
					<td><%= post.post_type %></td>
					<td><%= link_to post.title, admin_multi_american_post_path(post.post_id) %></td>
					<td><%= post.post_name %></td>
					<td><%= format_date(Time.parse(post.pubDate), time: true) %></td>
					<td><%= post.status %></td>
				</tr>
			<% end %>
	</tbody>
</table>
<%= will_paginate @posts, param_name: :posts_page, renderer: WillPaginate::ActionView::BootstrapLinkRenderer, params: { anchor: "posts"} %>