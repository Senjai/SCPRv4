<!DOCTYPE html>
<html>
<head>
  <title><%= @PAGE_TITLE ? @PAGE_TITLE + " | 89.3 KPCC" : "89.3 KPCC - Southern California Public Radio" %></title>
  <%= render "shared/header/header_js" %>
  <%= csrf_meta_tags %>
</head>
<body class="dark-theme" id="multimedia">
<!-- MASTHEAD-->
<%= render "shared/masthead" %>

<div id="main" class="container">
	<div class="row">
		<div class="span2">
			<button class="browse-all-videos">Browse All Videos</button>
			<div class="videos-overlay">
				<div class="grid">
					<div class="arrow left">&lt;</div>
					<ul class="videos">
						<%# This is populated via ajax from videos.js.coffee, which calls VideosController#index %>
					</ul>
					<div class="arrow right">&gt;</div>
				</div>
			</div>
		</div>
		<article class="span8">
			<%= yield %>
			<%# render "shared/cwidgets/comments", :cssClass => 'multimedia muted' %>
		</article>
		<div class="span2">&nbsp;</div>
	</div>
	<div class="row">
		<div class="latest-videos">
			<% %>
		<div id ="sidebar" class="span12">
		</div>
	</div>
</div>
<% content_for :footerjss do %>
	var videoPage = new scpr.VideoPage()
<% end %>
<%= render :partial => "shared/footer" %>
<%= render :partial => "shared/footer/footer_js" %>
</body>
</html>
