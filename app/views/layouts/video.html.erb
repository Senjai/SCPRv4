<!DOCTYPE html>
<html lang="en" xmlns:og="http://opengraphprotocol.org/schema/" xmlns:fb="http://www.facebook.com/2008/fbml">
<head>
	<title><%= @PAGE_TITLE ? @PAGE_TITLE + " | 89.3 KPCC" : "89.3 KPCC - Southern California Public Radio" %></title>
	<%= render "shared/header/header_js" %>
	<%= render "shared/header/opengraph" %>
	<script language="JavaScript">
	  GA_googleAddAttr("section", "video");
	</script>
	<%= csrf_meta_tags %>
</head>
<body class="dark-theme" id="multimedia">
<div class="viewport">
<!-- MASTHEAD-->
<%= render "shared/masthead" %>

<div id="video" class="container-fluid">
	<div class="row-fluid">
		<div class="span2 hidden-reader">
			<button class="browse-all-videos modal-toggler" data-modal-id="videos_list">Browse All Videos</button>
			
			<%= modal("videos-list", modal_id: "videos_list") do %>
				<div class="row-fluid">
					<div class="span1">
						<button class="arrow left" id="previous-page" data-page="">&nbsp;</button>
					</div>
					<div class="span10">
						<div class="list">
							<%# This is populated via ajax from videos.js.coffee %>
						</div>
					</div>
					<div class="span1 right-col">
						<button class="arrow right" id="next-page" data-page="">&nbsp;</button>
					</div>
				</div> <!-- row-fluid -->
				<div class="pages">&nbsp;</div>
			<% end %>
		</div> <!-- .span2 -->
		
		<article class="span8">
			<%= yield %>
			
			<% if any_to_list? @latest_videos %>
				<div class="multimedia latest-videos">
					<h3 class="head">Latest Videos</h3>
					<div class="list muted">
						<div class="row-fluid">
							<% @latest_videos.each do |video| %>
								<% if video.assets.present? %>
									<div class="span3">
										<div class="video-thumb">
											<%= render_asset video, "three" %>
											<span class="title"><%= link_to video.short_headline, video_path(video) %></span>
										</div> <!-- video-thumb -->
									</div>
								<% end %>
							<% end %>
						</div> <!-- row fluid -->
					</div> <!-- list muted -->
				</div> <!-- latest videos -->
			<% end %>
			<%= comments_for @video, cssClass: 'multimedia muted' %>
		</article>
		
		<div class="span2">
			&nbsp;
		</div>
	</div> <!-- row fluid -->
</div>

<% content_for :footerjss do %>
	videoPage = new scpr.VideoPage();
<% end %>

<%= render :partial => "shared/footer" %>
<%= render :partial => "shared/footer/footer_js" %>
</div>
</body>
</html>
