<% content_for :title_bar do %>
<div class="page-header">
  <div class="row-fluid">
    <div class="span16">
      <h1 class="page-title"><%= link_to "Events", events_path %></h1>
    </div>
    <div class="span8">
      <h3 class="section-nav-header">In this section</h3>
    </div>
  </div>
</div>
<% end %>

<% content_for :content do %>
  <% if content_for? :event_content %>
    <%= yield :event_content %>
  <% elsif content_for? :static_content %>
    <div class="static-content">
      <%= yield :static_content %>
    </div>
  <% else %>
    <%= yield %>
  <% end %>
<% end %>

<% content_for :sidebar_top do %>
  <%= render 'events/nav', navClass: "vertical" %>
<% end %>

<%= render :template => "layouts/application" %>
