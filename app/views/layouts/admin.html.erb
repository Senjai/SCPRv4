<!DOCTYPE html>
<html lang="en" xmlns:og="http://opengraphprotocol.org/schema/" xmlns:fb="http://ogp.me/ns/fb#">
<head>
  <title><%= @PAGE_TITLE ? @PAGE_TITLE + " | KPCC Admin" : "KPCC Admin" %></title>
  <%= stylesheet_link_tag "admin/admin" %>
  <%= javascript_include_tag "shared", "admin/admin", "#{Rails.application.config.node.server}/socket.io/socket.io.js" %>
  
  <link rel="shortcut icon" href="http://media.scpr.org/favicon.ico" />
  <%= csrf_meta_tags %>
</head>
<body>
  
<div class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <a href="<%=admin_root_path%>" class="brand">KPCC Admin</a>
      
      <% if admin_user %>
        <ul class="nav">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-plus-sign icon-white"></i> Add New <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <%= guard BlogEntry do   %><li><%= link_to "Blog Post", new_admin_blog_entry_path %></li><% end %>
              <%= guard ShowSegment do %><li><%= link_to "Show Segment", new_admin_show_segment_path %></li><% end %>
              <%= guard NewsStory do   %><li><%= link_to "News Story", new_admin_news_story_path %></li><% end %>
              <li class="divider"></li>
              <%= guard ContentShell do %><li><%= link_to "Content Shell", new_admin_content_shell_path %></li><% end %>
              <%= guard VideoShell do   %><li><%= link_to "Video Shell", new_admin_video_shell_path %></li><% end %>
              <%= guard Event do        %><li><%= link_to "Event", new_admin_event_path %></li><% end %>
            </ul>
          </li>
          <li><a href="http://a.scpr.org/a/assets" target="_new"><i class="icon-camera icon-white"></i> AssetHost</a></li>
          <li><a href="<%=root_path%>"><i class='icon-home icon-white'></i> KPCC.org</a></li>
        </ul>

        <ul class="nav pull-right">
          <li><a href="#ticket-modal" data-toggle="modal"><i class='icon-wrench icon-white'></i> Report a Problem</a></li>
          
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class='icon-user icon-white'></i> <%= admin_user.name %> <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Edit CMS Account", admin_user.admin_edit_path %></li>
              <% if admin_user.bio.present? %>
                <li><%= link_to "Edit Bio", admin_user.bio.admin_edit_path %></li>
              <% end %>
              <li><%= link_to "Logout", admin_logout_path, id: "logout" %></li>
            </ul>
          </li>
        </ul>
      <% else %>
        <ul class="nav pull-right">
          <li><%= link_to "Login", admin_login_path %></li>
        </ul>
      <% end %>
    </div>
  </div>
</div>

<% if admin_user %>
  <div class="navbar navbar-fixed-top fixed-breadcrumbs">
      <% if breadcrumbs.present? %>
        <div class="breadcrumb unstyled">
          <div class="container">
            <ul class="breadcrumb">
              <% breadcrumbs.each do |crumb| %>
                <li>
                  <% if crumb.link.present? %>
                    <%= link_to crumb.title, crumb.link %>
                  <% else %>
                    <%= crumb.title %>
                  <% end %>
          
                  <% unless crumb == breadcrumbs.last %>
                    <span class="divider">/</span>
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>
  </div> <!-- navbar -->
<% end %>

<div id="main" class="container">
  <div class="row">
    <div class="span<%= content_for?(:sidebar) ? "9" : "12" %>">
      <% flash.select { |k, v| v.is_a? String }.each do |name, msg| %>
        <div class="alert alert-<%= flash_alert_type(name) %>">
          <a class="close" data-dismiss="alert">&times;</a>
          <%= msg.html_safe %>
        </div>
      <% end %>
      
      <%= yield %>
    </div>
    <% if content_for?(:sidebar) %>
      <div class="span3" id="admin-sidebar">
        <%= yield :sidebar %>
      </div>
    <% end %>
  </div> <!-- row -->
</div> <!-- container main -->

<%= render '/admin/tickets/modal' %>
<%= yield :footerjs %>

</body>
</html>
