<!DOCTYPE html>
<html lang="en" xmlns:og="http://opengraphprotocol.org/schema/" xmlns:fb="http://ogp.me/ns/fb#">
<head>
	<title><%= @PAGE_TITLE ? @PAGE_TITLE + " | KPCC Admin" : "KPCC Admin" %></title>
	<%= stylesheet_link_tag "admin/admin" %>
	<%= javascript_include_tag "admin/admin" %>
	<%= csrf_meta_tags %>
</head>
<body>
	
<div class="navbar">
	<div class="navbar-inner">
		<div class="container">
			<%= link_to "KPCC Admin", admin_root_path, class: "brand" %>
			<ul class="nav">
				<li><%= link_to "News Stories", admin_root_path %></li>
				<li><%= link_to "Blog Entries", admin_root_path %></li>
				<li><%= link_to "Events", admin_root_path %></li>
				<li><%= link_to "Content Shells", admin_root_path %></li>
			</ul>
			
			<ul class="nav pull-right">
				<li><%= link_to "<i class='icon-user icon-white'></i> Profile".html_safe, admin_root_path %></li>
		</div>
	</div>
</div>

<div class="container">
<% if @breadcrumbs %>
	<ul class="breadcrumb">
		<% @breadcrumbs.each do |crumb| %>
			<li>
				<%= link_to crumb[:title], crumb[:link] %>
				<span class="divider">/</span>
			</li>
		<% end %>
	</ul>
<% end %>
</div>

<div id="main" class="container">
	<div class="row">
		<div class="span12">
			<div class="well">
				<% if @PAGE_TITLE %>
					<div class="page-header">
						<h1><%= @PAGE_TITLE %></h1>
					</div>
				<% end %>
				<%= yield %>
			</div>
		</div>
	</div> <!-- row-fluid -->
</div> <!-- container fluid main -->

</body>
</html>
