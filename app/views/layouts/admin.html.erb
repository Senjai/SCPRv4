<!DOCTYPE html>
<html lang="en" xmlns:og="http://opengraphprotocol.org/schema/" xmlns:fb="http://ogp.me/ns/fb#">
<head>
  <title><%= @PAGE_TITLE ? @PAGE_TITLE + " | Outpost" : "Outpost" %></title>
  <%= stylesheet_link_tag "admin/admin" %>
  <%= javascript_include_tag "shared", "admin/admin", "#{Rails.application.config.node.server}/socket.io/socket.io.js" %>
  
  <link rel="shortcut icon" href="http://media.scpr.org/favicon.ico" />
  <%= csrf_meta_tags %>
</head>
<body>

<div class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <a href="<%=admin_root_path%>" class="brand">Outpost</a>
      
      <% if admin_user %>
        <ul class="nav">
          
          <!-- Quick Nav -->
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-fast-forward icon-white"></i> Quick Nav <b class="caret"></b></a>
            <ul class="dropdown-menu cms-nav" style="width: 400px;">
              <% [BlogEntry, ShowSegment, NewsStory, ContentShell, Event, BreakingNewsAlert].each do |model| %>
                <%= guard model do %>
                  <li>
                    <a href="<%=model.admin_index_path%>"><%= model.to_title.pluralize %></a>
                  
                    <div class="btn-links">
                      <a class="add btn btn-mini" href="<%=model.admin_new_path%>"><i class="icon-plus-sign"></i> Add</a>
                      <a class="list btn btn-mini" href="<%=model.admin_index_path%>"><i class="icon-th-list"></i> List</a>
                    </div>
                  </li>
                <% end %>
              <% end %>
              
              <%= guard Homepage do %>
                <% if @current_homepage %>
                  <li>
                    <a href="<%=@current_homepage.admin_edit_path%>">Update Current Homepage (<%= format_date(@current_homepage.updated_at, format: :iso, time: true) %>)</a>
                  </li>
                <% end %>
              <% end %>
            </ul> <!-- dropdown-menu -->
          </li> <!-- Quick Nav dropdown -->
          
          <!-- Full Navigation -->
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-align-justify icon-white"></i> Navigation <b class="caret"></b></a>
            <% models = admin_user.allowed_resources.sort_by(&:name) %>
            <% per_col = 20 %>
            <% cols = (models.size.to_f / per_col.to_f).ceil %>

            <ul class="dropdown-menu cms-nav" style="width:<%= cols * 400 + cols * 10 %>px">
              <% models.each_with_index do |model, index| %>
                <% if index % per_col == 0 %>
                  <div class="grouper">
                <% end %>
                
                <li>
                  <a href="<%=model.admin_index_path%>">
                    <%= model.name.titleize.pluralize %>
                  </a>
                  
                  <div class="btn-links">
                    <% if model.respond_to?(:admin_new_path) %>
                      <a class="add btn btn-mini" href="<%=model.admin_new_path%>"><i class="icon-plus-sign"></i> Add</a>
                    <% end %>
                  
                    <% if model.respond_to?(:admin_index_path) %>
                      <a class="list btn btn-mini" href="<%=model.admin_index_path%>"><i class="icon-th-list"></i> List</a>
                    <% end %>
                  </div>
                </li>
                
                <% if index % per_col == per_col - 1 or model == models.last %>
                  </div>
                <% end %>
                
              <% end %>
            </ul> <!-- dropdown-menu -->
          </li> <!-- dropdown -->
          <li><a href="http://a.scpr.org/a/assets" target="_new"><i class="icon-camera icon-white"></i> AssetHost</a></li>
          <li><a href="<%=root_path%>"><i class='icon-home icon-white'></i> KPCC.org</a></li>
        </ul> <!-- nav -->

        <ul class="nav pull-right">
          <li><a href="javascript:(function()%7Bvar%20openCMS%3BopenCMS%3Dfunction()%7Bvar%20domain,id,match,matcher,path,redirectUrl,res,_i,_len%3Bdomain%3Dwindow.location.origin%3Bpath%3Dwindow.location.pathname%3BredirectUrl%3Dnull%3Bres%3D%5B%7Bre:new%20RegExp(%22%5E/blogs/(.%2B)/(.%2B)/(.%2B)/(.%2B)/(.%2B)/(.%2B)/%3F%24%22,%22gi%22),cmsPath:%22/r/admin/blog_entries%22,idSlot:5%7D,%7Bre:new%20RegExp(%22%5E/programs/(.%2B)/(.%2B)/(.%2B)/(.%2B)/(.%2B)/(.%2B)/%3F%24%22,%22gi%22),cmsPath:%22/r/admin/show_segments%22,idSlot:5%7D,%7Bre:new%20RegExp(%22%5E/news/(.%2B)/(.%2B)/(.%2B)/(.%2B)/(.%2B)/%3F%24%22,%22gi%22),cmsPath:%22/r/admin/news_stories%22,idSlot:4%7D,%7Bre:new%20RegExp(%22%5E/video/(.%2B)/(.%2B)/%3F%24%22,%22gi%22),cmsPath:%22/r/admin/video_shells%22,idSlot:1%7D%5D%3Bfor(_i%3D0,_len%3Dres.length%3B_i%3C_len%3B_i%2B%2B)%7Bmatcher%3Dres%5B_i%5D%3Bif(match%3Dmatcher.re.exec(path))%7Bid%3Dmatch%5Bmatcher.idSlot%5D%3BredirectUrl%3D%22%22%2Bdomain%2Bmatcher.cmsPath%2B%22/%22%2Bid%2B%22/edit%22%3Bbreak%7D%7Dif(redirectUrl)%7Breturn%20window.open(redirectUrl,%22_blank%22,%22width%3D1200,height%3D800%22)%7Delse%7Breturn%20alert(%22Can%27t%20find%20this%20in%20the%20CMS.%20Only%20News%20Stories,%20Blog%20Entries,%20Show%20Segments,%20and%20Video%20Shells%20are%20supported.%22)%7D%7D%3BopenCMS()%3B%7D)()%3B" rel="tooltip" data-original-title="Drag this link into your Bookmarks Bar. Clicking on it while on a News Story, Show Segment, Blog Entry, or Video Shell will open the edit page for it in Outpost." data-placement="bottom">Edit in Outpost</a></li>

          <li><a href="#ticket-modal" data-toggle="modal"><i class='icon-wrench icon-white'></i> Report a Problem</a></li>
          
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class='icon-user icon-white'></i> <%= admin_user.name %> <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Your Activity", activity_admin_admin_user_path(admin_user) %></li>
              <li><%= link_to "Edit CMS Account", admin_user.admin_edit_path %></li>
              <% if admin_user.bio.present? %>
                <li><%= link_to "Edit Bio", admin_user.bio.admin_edit_path %></li>
              <% end %>
              <li><%= link_to "Logout", admin_logout_path, id: "logout" %></li>
            </ul>
          </li>
        </ul>
      <% else %>
        <ul class="nav pull-right">
          <li><%= link_to "Login", admin_login_path %></li>
        </ul>
      <% end %>
    </div>
  </div>
</div>

<% if admin_user %>
  <div class="navbar navbar-fixed-top fixed-breadcrumbs">
      <% if breadcrumbs.present? %>
        <div class="breadcrumb unstyled">
          <div class="container">
            <ul class="breadcrumb">
              <% breadcrumbs.each do |crumb| %>
                <li>
                  <% if crumb.link.present? %>
                    <%= link_to crumb.title, crumb.link %>
                  <% else %>
                    <%= crumb.title %>
                  <% end %>
          
                  <% unless crumb == breadcrumbs.last %>
                    <span class="divider">/</span>
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>
  </div> <!-- navbar -->
<% end %>

<div id="main" class="container">
  <div class="row">
    <div class="span<%= content_for?(:sidebar) ? "9" : "12" %>">
      <% flash.select { |k, v| v.is_a? String }.each do |name, msg| %>
        <div class="alert alert-<%= flash_alert_type(name) %>">
          <a class="close" data-dismiss="alert">&times;</a>
          <%= msg.html_safe %>
        </div>
      <% end %>
      
      <%= yield %>
    </div>
    <% if content_for?(:sidebar) %>
      <div class="span3" id="admin-sidebar">
        <%= yield :sidebar %>
      </div>
    <% end %>
  </div> <!-- row -->
</div> <!-- container main -->

<%= render '/admin/tickets/modal' %>
<%= yield :footer %>

</body>
</html>
