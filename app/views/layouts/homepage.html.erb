<!DOCTYPE html>
<html>
<head>
  <title>89.3 KPCC - Southern California Public Radio</title>
  <%= render "shared/header/header_js" %>
  <%= csrf_meta_tags %>
</head>
<body>
<!-- MASTHEAD-->
<%= render "shared/masthead" %>
<!-- BROADCAST BAR -->
<div id="broadcast-bar-container">
	<%= render "shared/broadcast_bar" %>
</div>
<div id="main" class="container">
	<div class="row">
		<section class="span8">
			<%= yield %>
		</section>

		<div id="sidebar-top" class="span4">
			<div style="min-height:127px"><%= render "shared/widgets/oas", :ad_id => 'x01' %></div>
			<hr/>
			<%= render "shared/widgets/promo_membership_small", :ad_id => 'x13' %>
			<%= render "shared/widgets/facebook" %>
			<%= render "shared/widgets/most_popular" %>			
		</div>
		<div class="span12 top-half">&nbsp;</div>
	</div>
	<div class="row">
		<section class="span8 more-news-container">
			<%= yield :lower %>
		</section>
		<div id="sidebar-bottom" class="span4">
			<%= render "shared/widgets/oas", :ad_id => 'x02' %>
			<hr/>
			<%= render "shared/widgets/newsletter_subscribe" %>			
			<hr/>
			<%= render "shared/widgets/oas", :ad_id => 'x03' %>
			<hr/>
			<%= render "shared/widgets/promo_mobile" %>
		</div>
	</div>
	<br class="clearfix" />	
	</div>
</div>
<%= render :partial => "shared/footer" %>
<%= render :partial => "shared/footer/footer_js" %>
<!-- Makes the first offlead H3 bigger than the others -->
<script>$(".offleads h3.story-headline a:eq(0)").addClass("first-headline");</script>
</body>
</html>
