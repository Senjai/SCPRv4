<% @PAGE_TITLE = "Tags for #{@blog.name}" %>

<h1>Tags</h1>

<div class="row">
	<div class="span4">
		<h3>Recent Tags</h3>
		
		<ul>
		<% for t in @recent.first(25) %>
			<li><%= link_to t.name, blog_entries_tagged_path(@blog.slug,t.slug) %></li>
		<% end %>
		</ul>
	</div>
	<div class="span4">
		
	</div>
</div>