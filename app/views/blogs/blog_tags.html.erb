<% page_title "Tags for #{@blog.name}" %>

<h1>Tags</h1>

<div class="row">
  <div class="span8">
    <h3>Recent Tags</h3>
    
    <ul>
      <% @recent.first(25).each do |tag| %>
        <li><%= link_to tag.name, blog_entries_tagged_path(@blog.slug,tag.slug) %></li>
      <% end %>
    </ul>
  </div>
  <div class="span8"></div>
</div>
