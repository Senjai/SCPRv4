<% page_title [@blog.name, @entry.title], " : "
@OG_TYPE = "blog" %>

<%= render_content @entry, "opengraph" %>
<%= render "blogs/entry", entry: @entry %>

<div class="fold" id="fold">
	<%= content_widget "related_content_and_links", @entry %>
	<%= content_widget "next_prev", @entry %>
	
	<div class="row-fluid">
		<div class="span3" id="fold-comments-count-widget">
			<%= comment_widget_for @entry, cssClass: "left-side", name: "comments" %>
		</div>
		<div class="span9 mq-solo-span">
			<%= comments_for @entry, header: false %>
		</div>
	</div> <!-- row-fluid -->
</div> <!-- fold -->

<%= content_widget "track_page", @entry %>
