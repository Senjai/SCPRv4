<% add_to_page_title "Blogs" %>

<h1>KPCC Blogs</h1>
<div class="row-fluid">
  <div class="span12">
    <div class="directory" id="news">
      <h6>News &amp; Commentary</h6>
      <%= render partial: "/blogs/blog_module", collection: @news_blogs, as: :blog %>
    </div>
  </div>
  <div class="span12">
    <div class="directory" id="arts-and-culture">
      <h6>Arts &amp; Culture</h6>
      <%= render partial: "/blogs/blog_module", collection: @non_news_blogs, as: :blog %>
    </div>
  </div> <!-- .span8 -->
</div> <!-- .row -->
