<%# Featured video %>
<% @OG_TYPE = "video" %>

<%= render_content video, "opengraph" %>
<% if defined?(video) and video.assets.present? %> <%# This is a temporary fix that needs to be validated in the future %>
  <article class="video">
    <header>
      <%= render_asset video, "video" %>

      <h1 class="story-headline"><%= link_to video.headline, video.link_path %></h1>
      <span class="byline">
        <%= render_byline video %> <span class="pipe">|</span> <%= timestamp(video.published_at) %>
      </span>
    </header>
    
    <div class="story-body"><%= video.body.html_safe %></div>
  </article>

  <%= content_widget "social_tools", video, cssClass: "multimedia horizontal bottom" %>
<% end %>
