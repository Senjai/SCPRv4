<%# Featured video %>
<%= render_content video, "opengraph" %>
<% if defined?(video) and video.assets.present? %> <%# This is a temporary fix that needs to be validated in the future %>
	<article>
		<section class="video">
			<%= video.assets.first.asset.tags.eight.html_safe %>
		</section>
		<h1 class="story-headline"><%= video.headline %></h1>
		<p class="byline"><%= render_byline video %> <span class="pipe">|</span> <time pubdate=""><%= smart_date video %></time></p>
		<p class="description"><%= video.body %></p>
		<%= social_tools_for video, cssClass: "multimedia muted" %>
	</article>
<% end %>