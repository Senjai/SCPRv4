<div class="cbase lead">
	<%= render_asset(content,"lead") %>

	<h1 class="story-headline"><%= link_to content.headline, content.link_path %></h1>
	<h4>
		<%= smart_date content %> | <%= render_byline content %> | <%= content.comment_count.pluralize("Comment") %>
	</h4>

	<p><%=h strip_tags truncate(content.lede, :length => 200, :separator => '.') %></p>
</div>
<hr/>
