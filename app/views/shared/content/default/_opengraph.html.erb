<% content_for :opengraph do %>
	<% @META_DESCRIPT = h content.teaser %>
	<% @META_AUTHOR = h(render_byline(content,false)) %>
	<meta property="og:description" content="<%= h content.teaser %>">
    <meta property="og:title" content="<%= h content.headline %>">
    <meta property="og:type" content="<%= @OG_TYPE || "article" %>">

	<% if content.assets.any? %>
		<meta property="og:image" content="<%= content.assets.first.asset.urls.lsquare %>" />
		<link rel="image_src" href="<%= content.assets.first.asset.urls.lsquare %>" />
	<% end %>
<% end %>