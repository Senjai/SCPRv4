<% options ||= {} %>

<div class="cbase offlead">
  <h3><%= link_to content.short_headline, content.link_path %></h3>
  
  <div class="row-fluid">
    <% if content.assets.present? %>
      <div class="span6">
        <%= render_asset content, 'thumbnail' %>
      </div>
      <div class="span18">
    <% else %>
      <div class="span24">
    <% end %>
      <% if options[:show_byline] %>
        <span class="byline">
          <%= render_byline content %> 
          <%= smart_date_js content.published_at, "data-window" => "8h", "data-relative" => "2h" %>
        </span>
      <% end %>
      
      <p class="story-content clearfix"><%= content.teaser.html_safe %></p>
    </div> <!-- span -->
  </div> <!-- row -->
</div>
