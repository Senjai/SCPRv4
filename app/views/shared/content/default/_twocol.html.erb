<div class="cbase lead">
  <div class="row-fluid">
    <div class="span12">
      <%= render_asset article, "large" %>
    </div>
    <div class="span12">
      <h1 class="story-headline"><%= link_to article.short_title, article.public_url %></h1>
      <span class="byline">
        <%= render_byline article.original_object %>
        <%= smart_date_js article.public_datetime, "data-relative" => "2h" %>
      </span>

      <p><%= article.teaser.html_safe %></p>
      <%= comment_count_for article.original_object %>
    </div>
  </div> <!-- row-fluid -->
</div> <!-- cbase lead -->
