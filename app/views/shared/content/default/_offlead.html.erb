<div class="span8">
  <div class="cbase offlead clearfix" data-vr-contentbox="">
    <h3 class="story-headline"><%= link_to article.short_title, article.public_url %></h3>
    <span class="byline">
      <%= render_byline article.original_object %>
      <%= smart_date_js article.public_datetime, "data-window" => "8h", "data-relative" => "2h" %>
    </span>

    <p><%= article.teaser.html_safe %></p>
    <%= comment_count_for article.original_object %>
  </div>
</div> <!-- mq span8 -->
