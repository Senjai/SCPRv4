<div class="episode-guide hidden modal-toggle">
	<div class="arrow-up"></div>
	<div class="modal-close"></div>
	<div class="more">
		<a href="<%= program_path(program.slug) %>">More <%= program.title %></a>
	</div>
	<div class="inner-container">
		<h6><%= link_to episode.title, episode.link_path %></h6>

		<ul class="cbase">
			<li class="lead"><%= render partial: "shared/content/broadcast_bar/segment_lead", object: episode.segments.first, :as => :segment %></li>		
			<%= render partial: "shared/content/broadcast_bar/segment_offlead", collection: episode.segments.offset(1), :as => :segment %>
		</ul>
	</div>
</div>