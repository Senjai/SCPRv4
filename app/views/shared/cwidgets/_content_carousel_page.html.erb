<div class="carousel-section">
  <div class="row-fluid">
  <% contents.each do |extra_content| %>
    <div class="span6">
      <div class="carousel-item">
        <%= render_asset extra_content, 'thumbnail', true %>
        <span class="title"><%= link_to extra_content.short_headline, extra_content.link_path %></span>
      </div>
    </div>
  <% end %>
</div>
