<% if object.respond_to?(:missed_it_bucket) and object.missed_it_bucket.present? and object.missed_it_bucket.contents.present? %>
	<div class="missed-it-bucket widget cbase">
		<h6>In Case You Missed It</h6>
			<% object.missed_it_bucket.contents.limit(5).each do |content| %> <%# content is a MissedItContent object %>
				<div class="missed-it-content carousel-item">
					<div class="row-fluid">
						<div class="span4">
							<%= render_asset content.content, "thumb" %>
						</div>
						<div class="span8">
							<%= link_to content.content.headline, content.content.link_path %>
							<h4><%= format_date content.content.published_at, format: "event" %>
						</div>
					</div> <!-- row-fluid -->
				</div> <!-- missed it content -->
			<% end %>
	</div> <!-- missed it bucket -->
<% end %>