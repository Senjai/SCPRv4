<% if (bio = byline.user) && bio.is_public && bio.headshot %>
  <div class="author-info">
      <figure class="clearfix">
      <%= bio.headshot.thumb.tag %>
        <figcaption>
        <h6><%= link_to bio.name, bio.public_path %>, <em><%= bio.title %></em></h6>
        <p class="brief-bio"><%= bio.short_bio %></p>
        <ul class="tease clearfix">
          <% if bio.twitter_handle.present? %>
            <li class="follow"><%= link_to "Follow @#{bio.twitter_handle} on Twitter", <%= twitter_profile_url(bio.twitter_handle) %>, target: "_blank" %></li>
          <% end %>
          <li><%= link_to "More from #{bio.name}", bio.public_path %></li>
        </ul>
      </figcaption>
    </figure>
  </div>
<% end %>
