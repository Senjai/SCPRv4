<div class="featured">

<% articles.each do |article| %>
  <% register_content article.original_object %>
  <div class="row-fluid">
    <div class="span6">
      <%= render_asset article, 'thumbnail', true %>
    </div>
    
    <div class="span18">
      <h4><%= link_to article.short_title, article.public_url, :class => 'track-event', :data => {'ga-category' => 'MegaMenu', 'ga-action' => 'News Story', 'ga-label' => 'Content'} %></h4>
      <div class="cbase">

      <% if article.category.present? %>
        <span class="blog-title"><%= link_to article.category.title, article.category.public_path %></span>
      <% end %>
        
        <%= smart_date_js article.public_datetime, "data-window" => "8h", "data-relative" => "2h" %>
        
      <% if article.original_object.is_a?(ContentShell) %>
        <span class="shell-link">| <%= article.original_object.site %></span>
      <% end %>

      </div>
    </div> <!-- span -->
  </div> <!-- row fluid -->
<% end %>

</div> <!-- featured -->
