<!-- MASTHEAD -->
<!-- breaking news -->
<% content_cache "breaking_news" do %>
  <% register_content "layout/breaking_news_alert" %>
  <%= render "/breaking_news/breaking_news_alert" %>
<% end %>
<header id="masthead">
  <div class="container-fluid">
    <div class="head-lead-minimal">
      <span id="condensed-nav-link" class="condensed-nav-link">Menu</span>
      <a href="/" class="dark-logo"><%= image_tag "logo-masthead-dark.png", alt: "KPCC.org", id: "masthead-logo-dark" %></a>
      <a href="/listen" class="antenna pull-right">Listen</a>
    </div>
    <div class="head-lead">
      <div class="row-fluid">
          <div class="span8" id="masthead-left-header-wrapper">
          <div class="logo" id="masthead-kpcc-logo">
            <a href="/" class="logo-img" id="masthead-logo" title="KPCC.org"></a>
          </div>
        </div>

        <div class="span7" id="masthead-mid-header-wrapper">
          <div class="mid-header-wrapper">
            <div class="kpcc-personalities">
              <%= random_headshot %>
            </div> <!-- kpcc-personalities -->
          </div> <!-- mid header wrapper -->
        </div> <!-- span -->
      
        <div class="span9" id="masthead-right-header-wrapper">
          <nav class="utils">
            <ul>

              <!-- Social Media -->
              <li class="social">
                Follow us
                <a href="http://facebook.com/kpcc" class="track-event" data-ga-category="Masthead" data-ga-action="Social Media" data-ga-label="KPCC Facebook Page"><img src="http://media.scpr.org/assets/images/icons/header-icn-facebook.png" alt="Facebook" /></a>
                      <a href="http://twitter.com/kpcc" class="track-event" data-ga-category="Masthead" data-ga-action="Social Media" data-ga-label="KPCC Twitter Page"><img src="http://media.scpr.org/assets/images/icons/header-icn-twitter.png" alt="Twitter" /></a>
                <a href="https://plus.google.com/108872361044769229886/" class="track-event" data-ga-category="Masthead" data-ga-action="Social Media" data-ga-label="KPCC Google Plus Page"><img src="https://ssl.gstatic.com/images/icons/gplus-16.png" alt="Google +" width="14" height="14" /></a>
              </li>
            </ul>
          </nav>
          <div class="pledge-button-container">
            <a href="https://scprcontribute.publicradio.org/contribute.php" class="track-event" data-ga-category="Masthead" data-ga-action="Pledge" data-ga-label="Button"><%= image_tag('pledge-btn.png')%></a>
          </div> <!-- pledge button container -->
        </div> <!-- span -->
      </div> <!-- row fluid -->
    </div> <!-- head-lead -->

    <div id="megamenu" class="megamenu">
      <div class="nav-primary clearfix">
        <nav class="sections">
          <ul>
            <li class="listen-live"><a href="javascript:void(0)" onclick="open_popup('/listen_live/');" id="listen-live">Listen Live</a></li>
            <li class="mega"><a href="/news/" data-section="news-mega"><span>News</span></a></li>
            <li class="mega"><a href="/arts-life/" data-section="arts-mega"><span>Arts &amp; Life</span></a></li>
            <li class="mega"><a href="/programs/" data-section="programs-mega"><span>Programs</span></a></li>
            <li class="mega"><a href="/events/" data-section="events-mega"><span>Events</span></a></li>
            <li class="mega"><a href="/support/" data-section="support-mega"><span>Support Us</span></a></li>
            <li class="mega"><a href="/about/" data-section="about-mega"><span>About Us</span></a></li>
          </ul>
        </nav>
        <div class="search-form">
          <form action="/search/" method="get">
                <label>Search:</label>
                <input type="text" name="q" placeholder="Search" class="search" />
                <input type="submit" value="" id="submit" class="submit" />
              <input type="button" class="toggle-search" />
          </form>
        </div>
      </div> <!-- nav-primary -->
      <div id="mega-bucket" class="mega-bucket"></div>
    </div> <!-- megamenu -->
  </div> <!-- container fluid -->
</header>

<!-- menu section (hidden) -->
<div id="offscreen-header" style="position:absolute; top:-10000px; width:0px; height:0px;">
  <nav id="news-mega" class="section-mega clearfix" style="display:none;">
    <%= render "/shared/masthead/news" %>
  </nav>
  <nav id="arts-mega" class="section-mega clearfix" style="display:none;">
    <%= render "/shared/masthead/arts" %>
  </nav>
  <nav id="programs-mega" class="section-mega clearfix" style="display:none;">
    <%= render "/shared/masthead/programs" %>
  </nav>
  <nav id="events-mega" class="section-mega clearfix" style="display:none;">
    <%= render "/shared/masthead/events" %>
  </nav>
  <nav id="support-mega" class="section-mega clearfix" style="display:none;">
    <%= render "/shared/masthead/support" %>
  </nav>
  <nav id="about-mega" class="section-mega clearfix" style="display:none;">
    <%= render "/shared/masthead/about" %>
  </nav>
</div>

<div class="hero"></div>
<!-- end MASTHEAD-->
