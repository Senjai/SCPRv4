<div class="row">
	<div class="categories span3">
		<div class="inner-container clearfix">
		<h6>Categories</h6>
		<ul>
		    <li><a href="/local/">Local</a></li>
		    <li><a href="/california/">State</a></li>
		    <li><a href="/world/">U.S./World</a></li>
		    <li><a href="/politics/">Politics</a></li>
		    <li><a href="/environment/">Eco/Sci</a></li>
		</ul>
		<ul class="right">
		    <li><a href="/money/">Money</a></li>
		    <li><a href="/crime/">Crime &amp; Safety</a></li>
		    <li><a href="/education/">Education</a></li>
		    <li><a href="/health/">Health</a></li>
		</ul>
		<ul class="content-types">
		    <!--
		    <li class="videos"><a href="/videos/">Videos</a></li>	
		    -->
		    <li><a href="/blogs/">Blogs</a></li>
			<li><a href="/network/">Become a Source</a></li>
		</ul>
		</div>
	</div>
	<div class="featured span4">
		<div class="inner-container clearfix">
		<h6>Latest News</h6>
		<% content_cache("mega_news_latest") do %>
			<% register_content("contentbase:new") %>
			<ul>
			<% for c in get_latest_news.first(2) do %>
				<% register_content(c) %>
				<li>
					<a href="<%= c.link_path %>">
					<%= render_asset(c,"thumb") %>
					<p><%= c.headline %></p>
					</a>
				</li>
			<% end %>
			</ul>
		<% end %>
		</div>
	</div>
	<div class="blogs span5">
		<div class="inner-container clearfix">
			<h6>From Our Blogs</h6>			
			<ul>
				<% content_cache("mega_news_blogs") do %>
					<% register_content("blogs/entry:new") %>
					
					<% for e in @g_latest_blogs_news.limit(4) do %>
						<% register_content(e) %>
						<li><p class="entry-title">
							<a href="<%= e.link_path %>">
								<%= e.headline %>
								<span class="blog-name"><%= e.blog.name %></span>
							</a>
						</p></li>
					<% end %>
				<% end %>
	    	</ul>
		</div>
	</div>
</div>
