<% articles.first(4).each do |article| %>

<div class="row-fluid">
  <div class="span5">
    <%= render_asset article, 'thumbnail', true %>
  </div>
  <div class="span19">
    <a href="<%= article.public_url %>" class="track-event" data-ga-category="Popular Box" data-ga-action="Most Viewed" data-ga-label="<%= article.id %> :: <%= j article.title %>">
      <%= article.short_title %>
    </a>
  </div>
</div> <!-- row -->

<% end %>
