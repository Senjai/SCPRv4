<% find_gmaps %>

<% content_for :title_bar do %>
<div class="page-header">
	<div class="row">
			<div class="span8">
				<h1 class="page-title"><%= link_to "Events", events_path %></h1>
			</div>
			<div class="span4">
				<h3>In this section</h3>
			</div>
		</div>
	</div>
<% end %>

<div class="event event-detail">
	<div class="row">
		<div class="span2">
			<div class="article-meta">
				<%= render 'shared/cwidgets/social_tools', content: @event, options: { cssClass: "side" } %> <%# To be replaced with a better solution %>
				<%= comment_widget_for @event, cssClass: "left-side" %> <%# To be replaced with a better solution %>
				<%= render "shared/cwidgets/audio", content: @event %> <%# To be replaced with a better solution %>
			</div>
			
		</div>
		<div class="span6">
			<h1 class="story-headline event-headline"><%= link_to @event.title, @event.link_path %></h1>
			<div class="event-details">
				<div class="row">
					<div class="span3">
						<%= event_link @event %><br />
						<%= link_to "RSVP for this event", @event.rsvp_link, id: "rsvp-btn", class: "btn primary" if @event.rsvp_link.present? %>
					</div>
					<div class="span3">
						<div class="location-text">Location</div>
						<ul class="address">
							<li><span class="blue"><%= @event.location_name %></span></li>
							<% if @event.address_1.present? %><li><%= raw @event.address_1 %></li><% end %>
							<% if @event.address_2.present? %><li><%= raw @event.address_2 %></li><% end %>
							<li><%= "#{@event.city}," if @event.city.present? %> <%= "#{@event.state} #{@event.zip_code}" %></li>
							<% if @event.show_map %>
								<li class="modal-container">									
									<span class="fake-link bold map-link modal-toggler" data-address="<%= @event.url_safe_address %>">Map &amp; Directions</span>
									<%= modal(cssClass: "light google-maps") do %>
										<h5 class="address"><%= @event.inline_address %></h5>
										<div class="google-map" id="map-canvas"></div>
										<div id="map-errors">&nbsp;</div>
									<% end %>
								</li>
							<% end %>

						</ul>						
					</div>
				</div>
			</div>
			<%= render_asset @event, "blog" %>
			<p><%= raw @event.description %></p>
			<br style="clear: both" />
			<%= render 'shared/cwidgets/social_tools', content: @event, options: { cssClass: "bottom" } %> <%# TODO Replace this with a better solution %>
			<%= comments_for @event %>
		</div>
	</div>
</div>
