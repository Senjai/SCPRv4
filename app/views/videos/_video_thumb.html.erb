<%# Small video for Modal/"Latest Videos" strip at the bottom %>

<% size ||= "normal" %>

<% if asset = Asset.find(video_thumb.assets.first.try(:asset)) rescue nil %>
	<li class="video-thumb">
		<%= link_to (size == "small" ? asset.tags.thumb : asset.tags.three).html_safe, video_path(video_thumb) %>
		<div class="title"><%= video_thumb.short_headline %></div>
	</li>
<% end %>